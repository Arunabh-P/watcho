<div class="mx-5 d-md-flex align-items-stretch">
    <!-- Page Content  -->
    <div id="content" class="p-4 p-md-5 pt-5 ml-lg-4">
        <div class="mt-5">
            <div class="mt-3 row py-3 mr-0 ml-auto" style="background-color: rgb(248, 248, 248);  max-width: 45rem;">
                <form class="mb-0" id="registration_form" method="post" action="/edit-profile-details">

                    <input type="hidden" name="id" id="form9Example1" class="form-control input-custom"
                        value="{{user._id}}" />
                    <div class="row mb-4">
                        <div class="col">
                            <div class="form-outline">
                                <input placeholder="Name" type="text" name="name" id="form_name"
                                    class="form-control input-custom" value="{{user.name}}" />

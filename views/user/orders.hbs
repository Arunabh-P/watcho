<link href="https://fonts.googleapis.com/css?family=Poppins:300,400,500,600,700,800,900" rel="stylesheet">

<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
<link rel="stylesheet" href="/stylesheets/side-style.css">
{{!-- <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script> --}}

<div class="mx-5 d-md-flex align-items-stretch">
  <div id="content" class=" ml-lg-4">

    <div class="">

      <div class="container">
        <div class="main-body">
          <div class="row gutters-sm">
            <div class="col-md-4 mb-3 ">
              <div class="card " style="background-color: rgb(248, 248, 248) ; border: none;">
                <div class="card-body ">
                  <div class="d-flex flex-column align-items-center text-center">
                    {{!-- <img src="https://bootdey.com/img/Content/avatar/avatar7.png" alt="" class="rounded-circle"
                      width="150"> --}}
                    <div class="mt-3">
<lottie-player src="https://assets9.lottiefiles.com/packages/lf20_bo8vqwyw.json"  background="transparent"  speed="1"  style="width: 300px; height: 300px;"  loop  autoplay></lottie-player>
                      <h4>{{user.name}}</h4>
                      {{!-- <button class="btn btn-primary">Follow</button> --}}
                    </div>
                  </div>
                </div>
              </div>
              <div class="card mt-3 " style="border: none;">
                <ul class="list-group list-group-flush">
                  <li style="background-color: rgb(248, 248, 248)"
                    class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                    <a href="/user-profile">My Profile</a>
                  </li>
                  <li style="background-color: rgb(248, 248, 248)"
                    class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                    <a href="/profile-address">Address</a>
                  </li>
                  <li style="background-color: rgb(248, 248, 248)"
                    class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                    <a href="/orders">Orders</a>
                  </li>
                  <li
                    style="background-color: rgb(248, 248, 248)"
                    class="list-group-item d-flex justify-content-between align-items-center flex-wrap"
                  >
                    <a href="/offers">Offers</a>
                  </li>
                  <li
                    style="background-color: rgb(248, 248, 248)"
                    class="list-group-item d-flex justify-content-between align-items-center flex-wrap"
                  >
                    <a href="/wallet">Wallet</a>
                  </li>
                </ul>
              </div>
            </div>
            <div class="col-md-8 ">
              <div class=" row py-3 mr-0 ml-auto mb-3 " style="background-color: rgb(248, 248, 248);  max-width: 45rem;">
                <div class="col-9 ">
                  <h5>Order Details</h5>
                </div>
              </div>
              {{#each orders}}
              <div class=" row py-3 mr-0 ml-auto mb-3 "
                style="background-color: rgb(248, 248, 248);  max-width: 45rem;">
                <div class="mt-3 row py-3 mr-0 ml-auto"
                  style="background-color: rgb(248, 248, 248);  max-width: 45rem;">
                  <div class="col-12 pl-sm-4">
                    <h6 class=" text-truncate">{{this.date}}</h6>
                    <p class=" text-truncate">Address : {{this.deliveryDetails.address}}</p>
                    <p class="">Mobile number : {{this.deliveryDetails.mobile}}</p>
                    <p class="">Total Amount : Rs. {{this.totalAmount}} Only</p>
                    <p class="">Payment Method : {{this.paymentMethod}}</p>
                    {{#if this.status}}
                    <p style="color: rgb(15, 43, 201);font-weight: bold;">Your order is {{this.status}}</p>
                    <a href="/status-change?status=cancel&id={{this._id}}" class="btn btn-outline-danger">Cancel Order</a>
                    {{/if}}
                    {{#if this.cancelStatus}}
                    <p style="font-weight: bold; color: red;">Order Cancelled</p>
                    {{/if}}
                    {{#if this.deliveryStatus}}
                    <p style="font-weight: bold; color: green;">Order Delivered</p>
                    <a href="/status-change?status=return&id={{this._id}}" class="btn btn-outline-warning">Return Order</a>
                    {{/if}}
                    {{#if this.dispatchedStatus}}
                    <p style="font-weight: bold; color: rgb(94, 43, 2);;">Order Dispatched</p>
                    <a href="/status-change?status=cancel&id={{this._id}}" class="btn btn-outline-danger">Cancel Order</a>
                    {{/if}}
                    {{#if this.proccessingStatus}}
                    <p style="font-weight: bold; color: rgb(5, 88, 94);;">Order Proccessing</p>
                    <a href="/status-change?status=cancel&id={{this._id}}" class="btn btn-outline-danger">Cancel Order</a>

{{/if}}
{{#if this.returnStatus}}
                    <p style="color:  rgb(219, 66, 6);font-weight: bold;">Return request Approved</p>
{{/if}}


                    <td>
                      <a href="/view-order-products/{{this._id}}" class="btn  btn-outline-info">view products</a>
                    </td>
                  </div>
                </div>
              </div>
              {{/each}}
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <nav id="sidebar" class="d-none d-lg-block position-relative  mr-4 mt-3">
    <div class="p-4 pt-5 sticky-top mt-5">
      <div class="mb-5 sticky-top ">
        <h4>WatchO Fashion Store</h4>
        <h3>hi,<span style="text-transform: capitalize; color: rgb(11, 11, 131);"> {{user.name}}</span></h3>
        <h5>Explore collections</h5>
        <a href="/" class="btn btn btn-outline-success w-100">Explore</a>
      </div>


      
    </div>
  </nav>
</div>



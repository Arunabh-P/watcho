<div class="main_content_iner overly_inner ">
    <div class="container-fluid bg-white mt-5  p-5 " style="border-radius: 25px; ">
        <section>
    <div class="container mt-4">
        <div class="row">
            <div class="col-md-6">
                <h2 class="text-center">Add Exclusive Product</h2>
                <form action="/admin/edit-men-women-baner/{{menWomenBaner._id}}" method="post" enctype="multipart/form-data">
                    <label for="">Discription</label>
                    <input type="text" name="discription" class="form-control mb-3" value="{{menWomenBaner.discription}}">


                    <label for="form-label" for="customFile">Image</label>
                    <img src="/for-men-women-images/{{menWomenBaner._id}}.jpg" alt="" style="width: 75px;height:75px;"
                            id="imgview">
                    <input type="file" name="image" class="form-control mt-3" onchange="viewImage(event)">
                    <button type="submit" class="btn btn-success mt-4">Submit</button>
                </form>
            </div>
        </div>
    </div>
</section>

<div class="main_content_iner overly_inner ">
    <div class="container-fluid bg-white mt-5  p-5 " style="border-radius: 25px; ">
        <h2>Edit Category & subcategory</h2>
        <div class="row justify-content-center">
            <div class="col-md-6" style="transition: all 1s ease-out;">
                {{#if success}}
                <div style="transition: 0.5s; -webkit-transition: 0.5s;" id='successDiv' class="alert alert-success"
                    role="alert"><i class="=fa-regular fa-circle-check"></i>Category Updated
                </div>
                {{/if}}

            </div>

        </div>
        <div class=" col-md-6 card-product pt-4">
            <div class="each-cat">
                <form action="/admin/edit-category/{{cat._id}}" method="post" enctype="multipart/form-data">
                    <div class="row">
                        <div class="form-group col-md-5 ml-3 mt-3">
                            <label for="exampleInputEmail">Category</label>
                            <input type="text" name="Category" class="form-control" id="exampleInputEmail"
                                aria-describedby="emailHelp" value="{{cat.Category}}">
                        </div>
                        <div class="form-group col-md-5 ml-3 mt-3">
                            <label for="formFileSingle" class="form-label">Image</label>
                            <input name="image" type="file" class="form-control" id="fileupload">
                            <img src="/category-images/{{cat._id}}.jpg" alt="" style="width: 100px; height:auto"
                                id="imgView" class="pt-3 pb-3">

                        </div>
                        {{#each cat.SubCategory}}
                        <div class="form-group col-md-5 ml-3 mt-3">
                            <label for="exampleInputEmail">Sub Category</label>
                            <input type="text" name="SubCategory" class="form-control" id="exampleInputEmail"
                                aria-describedby="emailHelp" value="{{this}}">
                        </div>
                        
                        <div class="col-md-4" style="margin-top: 44px;">
                            <button class="btn btn-md btn-danger"
                                onclick="delete_sub('{{this}}','{{../cat._id}}');">Delete</button>
                        </div>
                        {{/each}}
                        <div class="col-md-4" style="margin-top: 44px;">
                            <button class="btn btn-success">Edit</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
<script>
    function viewImage(event) {
        document.getElementById('imgView').src = URL.createObjectURL(event.target.files[0])
    }
</script>